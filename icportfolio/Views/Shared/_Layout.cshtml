<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    
    <!-- Custom CSS -->
    <link href="css/1-col-portfolio.css" rel="stylesheet">
    <link href="~/Content/3-col-portfolio.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />

  


</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color: #cccccc">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Imari Childress", "Index", "Projects", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">                  
                    <li><a  href="https://www.github.com/imaricodes">GitHub</a></li>
                    @* Bootstrap modal pops up here to display pdf of resume and about me letter *@
                    <li><a class="btn view-resume pull-left" href="~/Content/images/dearReader3.pdf">About Me</a></li>
                    <li><a class="btn view-resume pull-left" href="~/Content/images/childress_resume_2016.pdf">Contact/Resume</a></li>
                </ul>
                @* Log in option commented out. Will be used in future revisions *@
                @*@Html.Partial("_LoginPartial")*@

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
   
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/pdfPopUp.js"></script>
</body>
</html>
